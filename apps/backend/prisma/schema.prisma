generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Event {
  id               String   @id @default(uuid())
  slug             String
  name             String
  password         String
  date             DateTime
  location         String
  description      String
  image            String
  bgImage          String
  expectedAudience Int
  guest            Guest[]

  @@map("eventos")
}

model Guest {
  id                 String  @id @default(uuid())
  name               String
  email              String
  confirmation       Boolean
  hasCompanions      Boolean
  quantityCompanions Int
  event              Event?  @relation(fields: [eventId], references: [id])
  eventId            String?

  @@map("convidados")
}